<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefWidth="400.0" spacing="20.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.makkerzsombor_javafxrestclientdolgoza.ListPeopleController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <HBox prefWidth="200.0" spacing="10.0">
         <children>
            <Button fx:id="insertButton" mnemonicParsing="false" onAction="#insertClick" text="Insert" />
            <Button fx:id="updateButton" mnemonicParsing="false" onAction="#updateClick" text="Update" />
            <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#deleteClick" text="Delete" />
         </children>
      </HBox>
      <HBox prefHeight="100.0">
         <children>
            <TableView fx:id="peopleTable" prefHeight="200.0" prefWidth="400.0">
              <columns>
                <TableColumn fx:id="nameCol" prefWidth="100.0" text="Name" />
                <TableColumn fx:id="ageCol" prefWidth="100.0" text="Age" />
                  <TableColumn fx:id="heightCol" prefWidth="100.0" text="Height" />
                  <TableColumn fx:id="marriedCol" prefWidth="100.0" text="Married" />
              </columns>
            </TableView>
         </children>
      </HBox>
   </children>
</VBox>
